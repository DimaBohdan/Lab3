<Window x:Class="Lab3.MatrixWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab3"
        mc:Ignorable="d"
        Title="MatrixWindow" Height="450" Width="750">
    <Grid Margin="10">

        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="400">
            <TextBox x:Name="GraphInfoText" TextWrapping="Wrap" FontFamily="Consolas" FontSize="14" Padding="5"/>
        </ScrollViewer>

    </Grid>
</Window>
