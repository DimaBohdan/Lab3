<Window x:Class="Lab3.SearchTreeMatrixWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Search Tree Matrix" Height="400" Width="600">
    <Grid>
        <StackPanel>
            <TextBlock Text="Adjacency Matrix of Search Tree" FontSize="16" FontWeight="Bold" Margin="10"/>
            <TextBlock x:Name="AdjacencyMatrixTextBlock" FontSize="14" Margin="10" TextWrapping="Wrap"/>

            <TextBlock Text="Vertex Numbering (Old → New)" FontSize="16" FontWeight="Bold" Margin="10"/>
            <TextBlock x:Name="VertexRenumberingTextBlock" FontSize="14" Margin="10" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>

