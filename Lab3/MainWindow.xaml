<Window x:Class="Lab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        KeyDown="Window_KeyDown"
        Title="Graph Drawer" Height="900" Width="900"
        >
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
            <TextBlock Text="№ варіанту:" VerticalAlignment="Center" />
            <TextBox Name="SeedInput" FontSize="14" Width="50"  Margin="5" />

            <Button Name="GenerateDirectedGraph" Content="Генерувати напрямлений граф" Margin="5" Click="OnGenerateDirectedGraphClick" />
            <Button Name="GenerateUndirectedGraph" Content="Генерувати ненапрямлений граф" Margin="5" Click="OnGenerateUndirectedGraphClick" />
            <Button Name="GenerateWeightedGraph" Content="Генерувати зважений граф" Margin="5" Click="OnGenerateWeightedGraphClick" />

        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
            <Canvas Name="GraphCanvas" Background="White" Width="800" Height="800" Margin="25,55,0,0" />
        </StackPanel>
    </Grid>
</Window>








