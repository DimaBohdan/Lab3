<Window x:Class="GraphAdjacencyMatrix.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Натальная карта онлайн бесплатно" Height="1080" Width="1920"
        WindowState="Maximized">
    
    <Grid>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
            <TextBlock Text="№ варіанту:" VerticalAlignment="Center" />
            <TextBox Name="SeedInput" FontSize="14" Width="50"  Margin="5" />
            <Button Name="GenerateDirectedGraph" Content="Генерувати напрямлений граф" Margin="5" Click="OnGenerateDirectedGraphClick" />
            <Button Name="GenerateUndirectedGraph" Content="Генерувати ненапрямлений граф" Margin="5" Click="OnGenerateUndirectedGraphClick" />
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" Margin="10">
            <TextBox Name="MatrixOutput" FontSize="14" Margin="0,5,0,0" TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
            <Canvas Name="GraphCanvas" Background="White" Width="700" Height="700" Margin="25,55,0,0" />
        </StackPanel>
    </Grid>
</Window>





